#!/usr/bin/env python3

import fileinput
import sys


for line in fileinput.input(inplace=True):
    if fileinput.isfirstline():
        sys.stdout.write('# File generated by ./configure; DO NOT EDIT.\n\n')
    if line == 'load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")\n':
        sys.stdout.write('load("@ambassador//build-aux-local:go.bzl", "go_binary")\n')
        sys.stdout.write('load("@io_bazel_rules_go//go:def.bzl", "go_library")\n')
        continue
    sys.stdout.write(line)
