{
	printf '//'
	printf ' %q' "$0" "$@"
	printf '\n// Code generated by the above command; DO NOT EDIT.\n\n'
	cat <<EOF
package sd_daemon

import "log/syslog"

EOF

	for pri in Emerg Alert Crit Err Warning Notice Info Debug; do
		cat <<EOF
// $pri writes a message with priority syslog.LOG_${pri^^} to the log.
func (l *Logger) $pri(msg string) error {
	_, err := l.LogString(syslog.LOG_${pri^^}, msg)
	return err
}

EOF
	done
} | gofmt
