{
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "id": "https://getambassador.io/schemas/logservice.json",
    "properties": {
        "ambassador_id": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            ]
        },
        "apiVersion": {
            "enum": [
                "getambassador.io/v2"
            ]
        },
        "driver": {
            "enum": [
                "tcp",
                "http"
            ]
        },
        "driver_config": {
            "additionalProperties": false,
            "properties": {
                "additional_log_headers": {
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "during_request": {
                                "type": "boolean"
                            },
                            "during_response": {
                                "type": "boolean"
                            },
                            "during_trailer": {
                                "type": "boolean"
                            },
                            "header_name": {
                                "type": "string"
                            }
                        },
                        "type": "object"
                    },
                    "type": "array"
                }
            },
            "type": "object"
        },
        "flush_interval_byte_size": {
            "type": "integer"
        },
        "flush_interval_time": {
            "type": "integer"
        },
        "generation": {
            "type": "integer"
        },
        "grpc": {
            "type": "boolean"
        },
        "kind": {
            "type": "string"
        },
        "metadata_labels": {
            "additionalProperties": {
                "type": [
                    "string",
                    "boolean"
                ]
            },
            "type": "object"
        },
        "name": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "service": {
            "type": "string"
        },
        "stats_name": {
            "type": "string"
        }
    },
    "required": [
        "apiVersion",
        "kind",
        "name"
    ],
    "type": "object"
}
