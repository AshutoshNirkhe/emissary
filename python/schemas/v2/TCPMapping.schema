{
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "id": "https://getambassador.io/schemas/mapping.json",
    "properties": {
        "address": {
            "type": "string"
        },
        "ambassador_id": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            ]
        },
        "apiVersion": {
            "enum": [
                "getambassador.io/v2"
            ]
        },
        "circuit_breakers": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "max_connections": {
                        "type": "integer"
                    },
                    "max_pending_requests": {
                        "type": "integer"
                    },
                    "max_requests": {
                        "type": "integer"
                    },
                    "max_retries": {
                        "type": "integer"
                    },
                    "priority": {
                        "enum": [
                            "default",
                            "high"
                        ],
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "cluster_tag": {
            "type": "string"
        },
        "enable_ipv4": {
            "type": "boolean"
        },
        "enable_ipv6": {
            "type": "boolean"
        },
        "generation": {
            "type": "integer"
        },
        "host": {
            "type": "string"
        },
        "idle_timeout_ms": {
            "type": "string"
        },
        "kind": {
            "type": "string"
        },
        "metadata_labels": {
            "additionalProperties": {
                "type": [
                    "string",
                    "boolean"
                ]
            },
            "type": "object"
        },
        "name": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "port": {
            "type": "integer"
        },
        "resolver": {
            "type": "string"
        },
        "service": {
            "type": "string"
        },
        "stats_name": {
            "type": "string"
        },
        "tls": {
            "type": [
                "string",
                "boolean"
            ]
        },
        "weight": {
            "type": "integer"
        }
    },
    "required": [
        "apiVersion",
        "kind",
        "name",
        "service",
        "port"
    ],
    "type": "object"
}
