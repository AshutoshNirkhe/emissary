{
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "id": "https://getambassador.io/schemas/tlscontext.json",
    "properties": {
        "alpn_protocols": {
            "type": "string"
        },
        "ambassador_id": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            ]
        },
        "apiVersion": {
            "enum": [
                "getambassador.io/v1"
            ]
        },
        "ca_secret": {
            "type": "string"
        },
        "cacert_chain_file": {
            "type": "string"
        },
        "cert_chain_file": {
            "type": "string"
        },
        "cert_required": {
            "type": "boolean"
        },
        "cipher_suites": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "ecdh_curves": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "generation": {
            "type": "integer"
        },
        "hosts": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "kind": {
            "type": "string"
        },
        "max_tls_version": {
            "enum": [
                "v1.0",
                "v1.1",
                "v1.2",
                "v1.3"
            ]
        },
        "metadata_labels": {
            "additionalProperties": {
                "oneOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "boolean"
                    }
                ]
            },
            "type": "object"
        },
        "min_tls_version": {
            "enum": [
                "v1.0",
                "v1.1",
                "v1.2",
                "v1.3"
            ]
        },
        "name": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "private_key_file": {
            "type": "string"
        },
        "redirect_cleartext_from": {
            "type": "integer"
        },
        "secret": {
            "type": "string"
        },
        "secret_namespacing": {
            "type": "boolean"
        },
        "sni": {
            "type": "string"
        }
    },
    "required": [
        "apiVersion",
        "kind",
        "name"
    ],
    "type": "object"
}
